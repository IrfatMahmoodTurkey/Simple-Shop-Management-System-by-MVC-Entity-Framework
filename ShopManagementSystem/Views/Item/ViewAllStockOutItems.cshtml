@using ShopManagementSystem.Models.ViewModels
@{
    ViewBag.Title = "ViewAllStockOutItems";
    Layout = null;
}

<link href="~/Content/Datatables/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/Datatables/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<style>
    body {
        margin-top: 0;
        margin-left: 100px;
        margin-right: 100px;
    }

    #all-head {
        background-color: #0288D1;
        padding: 12px;
        margin: 0;
        color: white;
    }

    #dataTable1 {
        margin: auto;
        border-collapse: collapse;
        width: 80%;
        font-family: sans-serif;
        font-size: 12px;
    }

        #dataTable1 thead {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
        }

        #dataTable1 td, #dataTable1 th {
            text-align: center;
            border: 1px solid #ddd;
            padding: 12px;
        }

        #dataTable1 tr:nth-child(even) {
            background-color: #f2f2f2;
        }


    #dataTable2 {
        margin: auto;
        border-collapse: collapse;
        width: 80%;
        font-family: sans-serif;
        font-size: 12px;
    }

        #dataTable2 thead {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
        }

        #dataTable2 td, #dataTable2 th {
            text-align: center;
            border: 1px solid #ddd;
            padding: 12px;
        }

        #dataTable2 tr:nth-child(even) {
            background-color: #f2f2f2;
        }


    #dataTable3 {
        margin: auto;
        border-collapse: collapse;
        width: 80%;
        font-family: sans-serif;
        font-size: 12px;
    }

        #dataTable3 thead {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
        }

        #dataTable3 td, #dataTable3 th {
            text-align: center;
            border: 1px solid #ddd;
            padding: 12px;
        }

        #dataTable3 tr:nth-child(even) {
            background-color: #f2f2f2;
        }
</style>


<body>
    <!-- Top container -->
    <div id="all-head">
        <span>
            <h3>View All Stock out Items</h3>
            <p>Show all stock out items saved on database database</p>
        </span>
    </div>

    @* navigation bar *@
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                @Html.ActionLink("View All Stock Out", "ViewAllStockOutItems", "Item", null, new { @class = "navbar-brand" })
            </div>
            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Stock Out Item", "StockOut", "Item")</li>
            </ul>
        </div>
    </nav>

    <h3>Sold Data</h3>
    <hr />
    <table id="dataTable1" style="width: 100%">
        <thead style="background-color: #0288D1">
            <tr>
            <tr>
                <td>Item Name</td>
                <td>Company Name</td>
                <td>Sold Date</td>
                <td>Quantity</td>
                <td>Discount</td>
                <td>Price</td>
            </tr>
            </tr>
        </thead>

        <tbody>
            @{
                if (ViewBag.Sold != null)
                {
                    foreach (StockOutViewModels items in ViewBag.Sold)
                    {
                        <tr>
                            <td>@items.ItemName</td>
                            <td>@items.CompanyName</td>
                            <td>@items.Date</td>
                            <td>@items.Quantity</td>
                            <td>@items.Discount</td>
                            <td>@items.Price</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
    <hr />


    <h3>Damaged Data</h3>
    <hr />
    <table id="dataTable2" style="width: 100%">
        <thead style="background-color: #0288D1">
            <tr>
            <tr>
                <td>Item Name</td>
                <td>Company Name</td>
                <td>Sold Date</td>
                <td>Quantity</td>
                <td>Discount</td>
                <td>Price</td>
            </tr>
            </tr>
        </thead>

        <tbody>
            @{
                if (ViewBag.Damaged != null)
                {
                    foreach (StockOutViewModels items in ViewBag.Damaged)
                    {
                        <tr>
                            <td>@items.ItemName</td>
                            <td>@items.CompanyName</td>
                            <td>@items.Date</td>
                            <td>@items.Quantity</td>
                            <td>@items.Discount</td>
                            <td>@items.Price</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
    <hr />


    <h3>Lost Data</h3>
    <hr />
    <table id="dataTable3" style="width: 100%">
        <thead style="background-color: #0288D1">
            <tr>
            <tr>
                <td>Item Name</td>
                <td>Company Name</td>
                <td>Sold Date</td>
                <td>Quantity</td>
                <td>Discount</td>
                <td>Price</td>
            </tr>
            </tr>
        </thead>

        <tbody>
            @{
                if (ViewBag.Losed != null)
                {
                    foreach (StockOutViewModels items in ViewBag.Losed)
                    {
                        <tr>
                            <td>@items.ItemName</td>
                            <td>@items.CompanyName</td>
                            <td>@items.Date</td>
                            <td>@items.Quantity</td>
                            <td>@items.Discount</td>
                            <td>@items.Price</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>

    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - CrazyCoders</p>
    </footer>
</body>

<script src="~/Scripts/jquery-1.12.4.min.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $('#dataTable1').DataTable();
    });

    $(document).ready(function () {
        $('#dataTable2').DataTable();
    });


    $(document).ready(function () {
        $('#dataTable3').DataTable();
    });
</script>



