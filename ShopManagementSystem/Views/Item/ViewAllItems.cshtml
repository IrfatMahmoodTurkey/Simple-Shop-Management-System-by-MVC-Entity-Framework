@using ShopManagementSystem.Models.ViewModels
@model ShopManagementSystem.Models.ViewModels.ItemViewModel

@{
    ViewBag.Title = "ViewAllItems";
    Layout = null;
}

<link href="~/Content/Datatables/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/Datatables/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        margin-top: 0;
        margin-left: 100px;
        margin-right: 100px;
    }

    #all-head {
        background-color: #0288D1;
        padding: 12px;
        margin: 0;
        color: white;
    }

    #dataTable {
        margin: auto;
        border-collapse: collapse;
        width: 80%;
        font-family: sans-serif;
        font-size: 12px;
    }

        #dataTable td, #dataTable th {
            text-align: center;
            border: 1px solid #ddd;
            padding: 12px;
        }

        #dataTable tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #dataTable thead {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #0288D1;
            color: white;
        }
</style>

<body>
    <!-- Top container -->
    <div id="all-head">
        <span>
            <h3>View All Items</h3>
            <p>Show all items from database</p>
        </span>
    </div>

    @* navigation bar *@
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                @Html.ActionLink("View All Items", "ViewAllItems", "Item", null, new { @class = "navbar-brand" })
            </div>
            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Item Setup", "SaveItem", "Item")</li>
            </ul>
        </div>
    </nav>


    <table id="dataTable" style="width: 100%">
        <thead>
            <tr>
                <td>
                    Serial No
                </td>
                <td>
                    Item Name
                </td>
                <td>
                    Company Name
                </td>
                <td>
                    Category Name
                </td>
                <td>
                    Reorder level
                </td>
                <td>
                    Available
                </td>
                <td>
                    Sell Price
                </td>
            </tr>
        </thead>

        <tbody>
            @foreach (ItemViewModel items in ViewBag.Items)
            {
                <tr>
                    <td>@items.SerialNo</td>
                    <td>@items.ItemName</td>
                    <td>@items.CompanyName</td>
                    <td>@items.CategoryName</td>
                    <td>@items.ReorderLevel</td>
                    <td>@items.Quantity</td>
                    <td>@items.SellPrice</td>
                    @*<td>@Html.ActionLink("Edit", "Edit", new { id = company.Id })</td>*@
                </tr>
            }
        </tbody>
    </table>

    <hr/>
<footer>
        <p>&copy; @DateTime.Now.Year - CrazyCoders</p>
    </footer>
</body>

<script src="~/Scripts/jquery-1.12.4.min.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $('#dataTable').DataTable();
    });
</script>



